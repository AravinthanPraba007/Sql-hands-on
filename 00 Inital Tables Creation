CREATE TABLE teacher(
     teacher_id INT GENERATED BY DEFAULT AS IDENTITY,
     teacher_name VARCHAR NOT NULL,
     PRIMARY KEY(teacher_id)
  );
  
    CREATE TABLE classroom(
  	classroom_id INT GENERATED BY DEFAULT AS IDENTITY,
  	classroom_name VARCHAR NOT NULL,
 	teacher_id INT,
 	PRIMARY KEY(classroom_id),
 	CONSTRAINT fk_teacher 
  		FOREIGN KEY(teacher_id) 
 	 		REFERENCES teacher(teacher_id)
  );
  
  CREATE TABLE student (
  	student_id INT GENERATED BY DEFAULT AS IDENTITY,
  	student_name VARCHAR NOT NULL, 
  	PRIMARY KEY(student_id)
  );
  
  CREATE TABLE subject (
  	subject_id INT GENERATED BY DEFAULT AS IDENTITY,
  	subject_name VARCHAR NOT NULL, 
  	PRIMARY KEY(subject_id)
  );

  CREATE TABLE subject_teacher (
  	subject_teacher_id INT GENERATED BY DEFAULT AS IDENTITY,
	 teacher_id INT NOT NULL,
	  subject_id INT NOT NULL,
	  PRIMARY KEY(subject_teacher_id),
  	FOREIGN KEY(teacher_id) REFERENCES teacher(teacher_id), 
  	FOREIGN KEY(subject_id) REFERENCES Subject(subject_id)
  	
  );